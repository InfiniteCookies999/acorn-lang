    int[8] a = [ L, 101, t, s ];
    write_val(a[0]);
    write_val(a[1]);
    write_val(a[2]);
    write_val(a[3]);
    write_val(a[4] + 32);
    write_val(a[5] + 103);
    write_val(a[6] + 111);
    write_val(a[7] + 33);
}